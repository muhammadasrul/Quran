<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tvJuz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Juz 1" />

    <TextView
        android:id="@+id/tvNumberOfVerses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/text_black_light"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tvJuz"
        app:layout_constraintStart_toEndOf="@id/tvJuz"
        app:layout_constraintTop_toTopOf="@id/tvJuz"
        tools:text="(120 verses)" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSurah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJuz"
        tools:itemCount="3"
        tools:listitem="@layout/item_surah_list" />

</androidx.constraintlayout.widget.ConstraintLayout>