<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp">

    <TextView
        android:id="@+id/tvSurahName"
        android:layout_width="0dp"
        android:paddingTop="2dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/bg_blue_extra_light"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Juz 1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/verseNumberContainer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSurahName"
        app:layout_goneMarginTop="0dp"
        app:strokeColor="@color/primary_blue_extra_light"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tvVerseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:paddingTop="3dp"
            android:textColor="@color/primary_blue"
            tools:text="1" />
    </com.google.android.material.card.MaterialCardView>

