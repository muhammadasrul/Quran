    <ImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@id/verseNumberContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewDots"
        app:layout_constraintTop_toTopOf="@id/verseNumberContainer" />

    <ImageButton
        android:id="@+id/imageViewDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_dots_three_vertical"
        app:layout_constraintBottom_toBottomOf="@id/verseNumberContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/verseNumberContainer" />

    <TextView
        android:id="@+id/tvArab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lpmq_isep_misbah"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        android:textColor="@color/text_black"
        android:textDirection="rtl"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verseNumberContainer"
        tools:text="ِميِحَّرلا ِنَٰمْحَّرلا ِهَّللا ِمْسِب" />

    <TextView
        android:id="@+id/tvTransliteration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:paddingHorizontal="6dp"
        android:textColor="@color/text_black_light"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArab"
        tools:text="Dengan menyebut nama Allah Yang Maha Pengasih lagi Maha Penyayang" />

    <TextView
        android:id="@+id/tvTranslation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:paddingHorizontal="6dp"
        android:textColor="@color/text_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTransliteration"
        tools:text="Dengan menyebut nama Allah Yang Maha Pengasih lagi Maha Penyayang" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:alpha=".5"
        android:background="@color/primary_blue_extra_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTranslation" />
</androidx.constraintlayout.widget.ConstraintLayout>